
params.outdir = "output"

params.pathoscope_index_dir="/ifs/data/nfs_share/ikmb_repository/databases/Pathoscope/2015-06"

singularity {
	enabled = true
	runOptions = "-B /ifs"
}

executor {

	name = "slurm"
	queueSize="50"

}

process {
	
	executor='slurm'
	queue='ikmb_a'
   	clusterOptions = { "--qos=ikmb_a" }
   	errorStrategy = { task.exitStatus == 143 ? 'retry' : 'finish' }
   	maxRetries = 3
   	maxErrors = '-1'

}

params {

	ariba {
	
		'arg-annot' {
			database = '/ifs/data/nfs_share/ikmb_repository/databases/Ariba/2017-09-25/out.arg-annot.prepareref'
		}
		'card' {
			database = '/ifs/data/nfs_share/ikmb_repository/databases/Ariba/2017-09-25/out.card.prepareref'
		}

	}

}
